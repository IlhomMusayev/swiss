<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css">
    <title>Admin panel</title>
</head>

<body>

    <% 
        var allBlogsPog = allBlogsPog || [] 
        var num = 1
        var a_num = 1
        var error 
        var succes
        var allAppointments = allAppointments || []
    %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container container-fluid">
            <a class="navbar-brand" href="/admin">Admin Panel</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/admin">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/admin/about">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/admin/cosmetic">Cosmetic</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/admin/contacts">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/admin/appointments">Appointments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/admin/news">News</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/admin/doctor">Doctor</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">


        <div class="row appointment-section">
            <div class="col-md-12 text-center my-5">
                <div class="title">
                    <h2>Appointments</h2>
                </div>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Date</th>
                        <th scope="col">Check</th>
                    </tr>
                </thead>
                <tbody>
                    <% allAppointmentPog.forEach(function(appointment) {%>
                    <tr>
                        <th scope="row"><%= a_num ++ %> </th>
                        <td><%= appointment.full_name %> </td>
                        <td><%= appointment.phone %> </td>
                        <td><%= appointment.dateCreated.toGMTString()
                                %>
                        </td>
                    </tr>
                    <% }) %>

                </tbody>
            </table>
            <div>
                <nav class="" aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="/admin?skipappontment=<%= skipappontment - 1%>">Previous</a>
                        </li>

                        <% for(let i = 0; i < Math.ceil(allAppointmentCount / 10); i++){%>
                        <li class="page-item">
                            <a class="page-link" href="/admin?skipappontment=<%= i%>"><%= i + 1%></a>
                        </li>
                        <%}%>

                        <li class="page-item">
                            <a
                                class="page-link"
                                href="/admin?skipappontment=<%= skipappontment + 1%>"
                        >Next</a>
                        </li>
                    </ul>
                </nav>
            </div>


        </div>
    </div>










    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous">
    </script>
    <script src="https://cdn.ckeditor.com/ckeditor5/11.0.1/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
    
</body>

</html>
<%- include('parts/header')%>
<% contacts = contacts || {} %>
<style>
   p {
      line-height: 30px;
   }

   .our-address__list {
      width: 100%;
   }

   @media (max-width: 1045px) {
      .our-address__list {
         width: 50%;
      }

      p {
         margin-top: 10px;
      }
   }
</style>


<h1>Bu shunchaki sarlavha</h1>

<!--OUR ADDRESS SECTION-->
<section class="our-address">
   <h1>Contacts Page</h1>
   <div class="container">
      <div class="our-address__wrapper">
         <h2 class="our-address__heading">
            <%= contactLanguages.header_title[language] %>
         </h2>
         <div class="our-address__social__wrapper">
            <ul class="our-address__list">
               <li class="our-address__item">
                  <a href="tel: +998711234567 "><%= contacts.phone_number %></a>
               </li>
               <li class="our-address__item">
                  <a href="mailto: info@dental.com"><%= contacts.email %></a>
               </li>
               <li class="our-address__item">
                  <a href="#"><%= contacts.address %></a>
               </li>
            </ul>
            <div class="our-address__social__links">
               <a class="our-address__social__links__item" target="_blank"
                  href="https://facebook.com/<%= contacts.facebook %>">
                  <img src="img/icons/ffacebook.svg" alt="facebook icon">
               </a>
               <a class="our-address__social__links__item" target="_blank" href="https://t.me/<%= contacts.telegram %>">
                  <img src="img/icons/ftelegram.svg" alt="telegram icon">
               </a>
               <a class="our-address__social__links__item" target="_blank"
                  href="https://instagram.com/<%= contacts.instagram %>">
                  <img src="img/icons/finstagram.svg" alt="instagram icon">
               </a>
               <a class="our-address__social__links__item" target="_blank"
                  href="https://twitter.com/<%= contacts.twitter %>">
                  <img src="img/icons/ftwitter.svg" alt="twitter icon">
               </a>
            </div>
            <p class="">
               <% if(language === 'uz') {%> <%- contacts.aboutuz %> <% } else { %> <%- contacts.aboutru %> <% } %>
            </p>
         </div>
         <div class="our-branch-address__list">
            <% filials.forEach(filial => {%>
            <div class="our-branch-address__item branch__item">
               <div class="branch__item__heading">
                  <%= filial.name %>
               </div>
               <a href="tel: <%= filial.phone_number %> "><%= filial.phone_number %></a>
               <a href="mailto: <%= filial.email %>"><%= filial.email %></a>
            </div>
            <% }) %>
         </div>
      </div>
      <h2 class="map__heading">
         <%= contactLanguages.map_title[language] %>
      </h2>
      <div class="map__wrapper">
         <iframe
            src="https://yandex.ru/map-widget/v1/?um=constructor%3Ac75cb121cfa27601e9569128abe2f46d71be78a08dcb170f0e4d43fdc2491af8&amp;source=constructor"
            width="100%" height="514" frameborder="0"></iframe>
      </div>
   </div>
</section>

<!--SITE FOOTER-->
<%- include('parts/footer')%>
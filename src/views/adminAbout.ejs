<!DOCTYPE html>
<html lang="en">
    <% var allAbouts %> 

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Admin panel</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container container-fluid">
          <a class="navbar-brand" href="#">Admin Panel</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/admin">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/admin/about">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/admin/addblog">Add Blog</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center my-4">
                <h2>About page</h2>
                <hr>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-md-12">
                <h2>About clincs text</h2>
                <form action="/admin/about" method='POST' enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="title" class="mt-3">Uzbek Title</label>
                        <input type="text" class="form-control my-1" id="title" name="title_uz" required 
                        value="<% if(allAbouts){ %> <%= allAbouts.title_uz %> <% } %>  ">

                        <label for="title" class="mt-3">Russion Title</label>
                        <input type="text" class="form-control my-1" id="title" name="title_ru" required
                        value="<% if(allAbouts){ %> <%= allAbouts.title_ru %> <% } %>  ">

                        <label for="text" class="my-2">Uzbek Text</label>
                        <textarea name="content_uz" id="editoruz" class="my-2" placeholder="Shu yerga blog so'zlarini kiriting..." required >
                            &lt;p&gt;<% if(allAbouts){ %> <%= allAbouts.content_uz %> <% } %> &lt;/p&gt;
                        </textarea>

                        <label for="text" class="my-2">Rus Text</label>
                        <textarea name="content_ru" id="editorru" class="my-2" placeholder="Shu yerga blog so'zlarini kiriting..."  required>
                            &lt;p&gt;<% if(allAbouts){ %> <%= allAbouts.content_ru %> <% } %> &lt;/p&gt;
                        </textarea>
                        <label for="image" class="mt-2">Image</label>
                        <input type="file" class="form-control my-2" style="display: block" id="image" name="image" required>

                        <input type="hidden" name='id' value="<%if(allAbouts){%><%=allAbouts._id %><%}%>">

                        <input type="submit" class="btn btn-primary w-100 mt-3" value="Ma'lumot qo'shish">
                    </div>
                </form>
            </div>

            <div class="col-md-12">
                <h2 class="my-5">Photo galery</h2>
                <form action="/admin/addphotos" method="post" enctype="multipart/form-data">
                    <label for="photos">Select photos</label>
                    <input type="file" name="photos" id="photos" style="display: block" class="form-control my-2" multiple>
                    <input type="submit" value="Saqlash" class="btn btn-primary w-100 mt-3">
                </form>
            </div>
             <div class="col-md-12 mt-5">
            <div class="title">
                <h4>Photo galery</h4>
                <hr>
                <ul class="gallery_photoss">
                    <% for(let photo of photos) {%>
                        <div class="gallery-admin">
                              <img src="/photogalery/<%= photo.filename %>" width="600" height="400">
                              <div class="desc">
                                <a href="/admin/deletephoto/<%= photo._id %>" class="btn btn-danger">Delete</a> 
                            </div>
                          </div>      
                    <% } %> 
                </ul>
            </div>

            <% var num = 1 %> 
            <div class="col-md-12">
                <h2 class="my-5">Video galery</h2>
                <form action="/admin/addvideo" method="post" enctype="multipart/form-data">
                    <label for="video_link">Youtube video link</label>
                    <input type="link" name="video_link" id="video_link" style="display: block" class="form-control my-2" placeholder="Youtube video link" required>        

                    <label for="videoimg">Youtube video cover image</label>
                    <input type="file" name="videoimg" id="videoimg" style="display: block" class="form-control my-2" required>

                    <label for="caption">Youtube video cover image</label>
                    <input type="text" name="caption" id="caption" style="display: block" class="form-control my-2" placeholder="Video caption" required>
                    <input type="submit" value="Saqlash" class="btn btn-primary w-100 mt-3">
                </form>
            </div>

            <h4 class="my-4">Video galery</h4>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Video links</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% videos.forEach(function(video) {%>
                    <tr>
                        <td scope="row"><%= num ++ %> </td>
                        <td scope="row"><a _blank="true" href="<%= video.video_link %>"><%= video.video_link %></a></td>
                        <td scope="row">
                            <a href="/admin/deletevideo/<%= video._id %>" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }) %>

                </tbody>
            </table>

            

        </div>

        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous">
        </script>
        <script src="https://cdn.ckeditor.com/ckeditor5/11.0.1/classic/ckeditor.js"></script>
        <script>
            ClassicEditor
                .create( document.querySelector( '#editoruz' ) )
                .catch( error => {
                    console.error( error );
                } );

            ClassicEditor
                .create( document.querySelector( '#editorru' ) )
                .catch( error => {
                    console.error( error );
                } );
        </script>
</body>

</html>
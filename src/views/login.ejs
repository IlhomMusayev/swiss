<%- include('parts/header') %>

<% var error %>

<!--LOGIN FORM SECTION-->
<main class="login-section">
   <h2>Вход в аккаунт</h2>
   <% if(error) {%>
      <div class="tabs__settings__status" style="width: 100%; background-color: rgb(175, 43, 9); color: white">
            <%= error %>
      </div>
      <% } %>
   <span>Введите пожалуста ваше логин и пароль</span>
   <form class="login-form" method="POST">
      <div class="login-form__field mb-20">
         <input type="text" name="login" id="login" placeholder=" ">
         <label for="login">Логин</label>
      </div>
      <div class="login-form__field mb-70">
         <input type="password" name="password" id="password" placeholder=" ">
         <label for="password">Пароль</label>
      </div>
      <button class="login-form__submit">
         <img src="img/icons/login.svg" alt="">
         <span>Вход</span>
      </button>

      <div class="register-forgot">
         <a href="#">Забыли пароль?</a> /
         <a href="register">Регистрация</a>
      </div>
   </form>
</main>

